    "chai": "^4.3.4",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-extended": "^0.11.5",
    "mocha": "^8.3.2",
    "nock": "^13.0.11",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "redis-mock": "^0.56.3",
    "sinon": "^10.0.0"
  },
  "// (prettier)": "configuration version 2020-06-15 - might also reside in .prettierrc.json",
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
