{
  "name": "@kth/api-call",
  "version": "4.0.0",
  "description": "Node.js module to make JSON calls against APIs.",
  "main": "index.js",
  "automaticPublish": "true",
  "repository": {
    "type": "git",
    "url": "https://github.com/KTH/kth-node-api-call"
  },
  "author": {
    "name": "KTH",
    "email": "infosys@kth.se",
    "url": "https://github.com/KTH"
  },
  "license": "MIT",
  "scripts": {
    "test": "mocha tests/** --exit && jest",
    "jest": "jest",
    "jest:watch": "jest --watch",
    "jest:watch-update": "jest --watch -u",
    "build": "./build.sh",
    "prepare": "bash -c 'if [ -f ./node_modules/.bin/husky ]; then husky install; fi'",
    "prettier:all": "prettier --write \"**/*.js\""
  },
  "keywords": [
    "api",
    "kth",
    "json"
  ],
  "dependencies": {
    "node-fetch": "^2.6.6",
    "q": "^1.5.1",
    "url-join": "^4.0.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@kth/eslint-config-kth": "^2.0.2",
    "@moebius/http-graceful-shutdown": "^1.1.0",
    "@types/jest": "^27.0.0",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "express": "^4.17.1",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-extended": "^1.2.0",
    "mocha": "^9.0.3",
    "nock": "^13.1.1",
    "prettier": "^2.3.2",
    "pretty-quick": "^3.1.1",
    "redis-mock": "^0.56.3",
    "sinon": "^11.1.2"
  },
  "// (prettier)": "configuration version 2020-06-15 - might also reside in .prettierrc.json",
  "prettier": {
    "arrowParens": "avoid",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "// (jest)": "configuration version 2020-06-15 (API+NPM) - might also reside as module.exports in jest.config.js",
  "jest": {
    "clearMocks": true,
    "notifyMode": "failure-change",
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "verbose": true,
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test-utils/",
      "/test/mock-api/"
    ]
  }
}
